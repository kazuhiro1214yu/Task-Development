<% provide(:title, 'New Task') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @task } %>
      
      <%= f.label :title, class: "label-signup" %>
      <%= f.text_field :title, class: "form-control" %>

<!--詳細の入力枠は「テキスト型」にしたいが、そのための記述に修正が必要-->
      <%= f.label :detail, class: "label-signup" %>
      <%= f.text_area :detail, rows: 5, class: "form-control" %>

<!--submitの「signup」はこのままで正しいのか確認が必要-->
      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div> 