<% provide(:title, 'New Task') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :名称, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

<!--詳細の入力枠は「テキスト型」にしたいが、そのための記述に修正が必要-->
      <%= f.label :詳細, class: "label-signup" %>
      <%= f.text_area :detail, rows: 5, class: "form-control" %>

<!--submitの「signup」はこのままで正しいのか確認が必要-->
      <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div> 