<% provide(:title, 'Edit Task') %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @task } %>
      
      <%= f.label :名称, class: "label-signup" %>
      <%= f.text_field :title, class: "form-control" %>

<!--詳細の入力枠は「テキスト型」にしたいが、そのための記述に修正が必要-->
      <%= f.label :詳細, class: "label-signup" %>
      <%= f.text_area :detail, rows: 5, class: "form-control" %>

<!--submitの「signup」はこのままで正しいのか確認が必要-->
      <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div> 