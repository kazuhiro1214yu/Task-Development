<% provide(:title, @user.name ) %>

<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id = "table-task">
      <tbody>
        <thead>
          <tr>
            <th class="active col-md-2 text-center">ID</th>
            <td><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active col-md-2 text-center">名称</th>
            <td><%= @task.title %></td>
          </tr>
          <tr>
            <th class="active col-md-2 text-center">詳細</th>
            <td><%= @task.detail%></td>
          </tr>
          <tr>
            <th class="active col-md-2 text-center">作成日</th>
            <td><%= l(@task.created_at, format: :long) %></td>
          </tr>
          <tr>
            <th class="active col-md-2 text-center">更新日</th>
            <td><%= l(@task.updated_at, format: :long) %></td>
          </tr>
          
        </thead>
      </tbody>
    </table>  
    <div>
      <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-lg btn-success" %>
      <%= link_to "削除", "#", class: "btn btn-lg btn-danger" %>
    </div>
  </div>
</div> 
